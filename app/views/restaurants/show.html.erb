<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<h5>All reviews</h5>
<div class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <div href="#" class="list-group-item list-group-item-action flex-column align-items-start">
      <div class="d-flex w-100 justify-content-between">
        <small> <%= review.created_at.strftime("%B %d %Y") %> at <%= review.created_at.strftime("%H:%M") %> </small>
        <small> <%= review.rating %> / 5 </small>
      </div>
      <p class="mb-1"><%= review.content %></small>
    </div>
  <% end %>
</div>

<br>
<h5>Add a review</h5>
<%= render 'reviews/form', restaurant: @restaurant, review: @review %>

<%= link_to 'Check reviews', restaurant_reviews_path(@restaurant) %>
<br>
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
